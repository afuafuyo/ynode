#!/usr/bin/env node

'use strict';

/**
 * 该文件用来初始化基本的应用框架
 */
const fs = require('fs');
const path = require('path');

const dir = process.cwd();
const appName = process.argv.slice(2)[0];

if(undefined === appName) {
    console.log('appName must specified');
    return;
}

function createDirectorySync(dir, mode) {
    undefined === mode && (mode = 0o777);

    if(fs.existsSync(dir)) {
        return true;
    }

    if(createDirectorySync(path.dirname(dir))) {
        fs.mkdirSync(dir, mode);
    }

    return true;
}

/*
project structor

prject
    app
        controllers
            index
                IndexController.js
        views
            index
                index.html
        modules
        runtime
*/
const controllerPath = dir + '/' + appName + '/app/controllers/index';
const viewPath = dir + '/' + appName + '/app/views/index';
const mainFile = dir + '/' + appName + '/index.js';

createDirectorySync(controllerPath);
createDirectorySync(viewPath);

// controller file
fs.writeFile(controllerPath + '/IndexController.js',
`'use strict';

const Y = require('ynode/Y');
const YNode = require('ynode');
const Controller = Y.include('y/web/Controller');

class IndexController extends Controller {

    run(req, res) {
       this.getView().getTemplate('index', (err, data) => {
           res.end(data);
       });
    }

}

module.exports = IndexController;
`,
    function(err){
        if(err) throw err;
});

// view file
fs.writeFile(viewPath + '/index.html',
`<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>YNode</title>
</head>
<body>
    <h2>Hello YNode</h2>
</body>
</html>
`,
    function(err){
        if(err) throw err;
});

// main file
fs.writeFile(mainFile,
`const YNode = require('ynode');
const App = require('ynode/web/Application');

const app = new App({
    'id': 1,
    'debug': true,
    'appPath': __dirname + '/app'
});

new YNode(app).listen(8090, function(){
    console.log('listen on 8090');
});
`,
    function(err){
        if(err) throw err;
});

// done
console.log('done');
